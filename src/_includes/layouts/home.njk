{% extends "layouts/base.njk" %}
{% set title = site.title %}
{% block content %}
<section id="projects">
  <h2 class="section-title">Projects</h2>
  <div class="grid">
    {% for p in collections.projects %}
      {% if loop.index <= 6 %}
      <article class="card">
        <a href="{{ p.url }}" class="thumb" aria-label="{{ p.data.title }}">
          {% if p.data.image %}
            <img src="{{ p.data.image }}" alt="{{ p.data.title }}" />
          {% else %}
            4:3 image
          {% endif %}
        </a>
        <div class="card-content">
          <h3><a href="{{ p.url }}">{{ p.data.title }}</a></h3>
          <div class="meta">{{ p.data.meta or '' }}</div>
        </div>
      </article>
      {% endif %}
    {% endfor %}
  </div>
</section>

<section id="news">
  <h2 class="section-title">News</h2>
  <div class="news">
    {% for post in collections.news %}
      {% if loop.index <= 3 %}
      <div class="item"><time datetime="{{ post.date.toISOString() }}">{{ post.date.toDateString() }}</time> • <a href="{{ post.url }}">{{ post.data.title }}</a></div>
      {% endif %}
    {% endfor %}
  </div>
</section>

<section id="writing">
  <h2 class="section-title">Writing</h2>
  <div class="list">
    {% for post in collections.writing %}
      {% if loop.index <= 6 %}
      <div class="post"><time datetime="{{ post.date.toISOString() }}">{{ post.date.toDateString() }}</time> — <a href="{{ post.url }}">{{ post.data.title }}</a></div>
      {% endif %}
    {% endfor %}
  </div>
</section>

<section id="about">
  <h2 class="section-title">About</h2>
  <p>I work on practical tools and programs for resilient communities: outdoor education, open hardware, and small‑scale infrastructure. I'm based near Boston.</p>
  <p>Right now I'm building <a href="https://waterbearfieldschool.org/" target="_blank" rel="noopener">Waterbear Field School</a> and documenting projects so others can replicate and adapt them.</p>
</section>
{% endblock %}